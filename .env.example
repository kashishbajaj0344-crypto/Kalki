# ============================================================
# Kalki v2.4 â€” Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ==========================================
# REQUIRED API KEYS (Get from respective services)
# ==========================================

# OpenAI API Key - Required for LLM functionality
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Token - Optional, for model downloads
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ==========================================
# OPTIONAL API KEYS (Enhance functionality)
# ==========================================

# Google Search API - For web search capabilities
# Get from: https://console.developers.google.com/
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Bing Search API - Alternative web search
# Get from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your_bing_api_key_here

# SerpApi - Commercial web search API
# Get from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# Python environment
PYTHONPATH=/app
KALKI_ENV=development

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=kalki.log

# Data directories
VECTOR_DB_PATH=data/vector_db
PDF_DIR=pdfs
DATA_DIR=data
SESSIONS_DIR=sessions

# ==========================================
# PERFORMANCE TUNING
# ==========================================

# Vector database settings
TOP_K=5
EMBEDDING_MODEL=text-embedding-3-large
VECTOR_DB_TYPE=chroma

# LLM settings
LLM_MODEL=gpt-4
MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Processing settings
INGEST_THREADS=2
MAX_WORKERS=4
BATCH_SIZE=10

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Session security
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=10

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Data privacy
ENABLE_PII_DETECTION=true
DATA_RETENTION_DAYS=90

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_INTERVAL=30

# Health checks
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false

# Development features
ENABLE_SWAGGER=true
ENABLE_PROFILING=false

# Test settings
TEST_DATABASE_URL=sqlite:///test.db
MOCK_EXTERNAL_APIS=false

# ==========================================
# CONTAINER & DEPLOYMENT
# ==========================================

# Docker settings
DOCKER_BUILDKIT=1
COMPOSE_PROJECT_NAME=kalki

# Kubernetes settings (if deploying to K8s)
K8S_NAMESPACE=kalki
K8S_REPLICAS=1

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION=7

# Recovery settings
AUTO_RECOVERY=true
RECOVERY_TIMEOUT=300